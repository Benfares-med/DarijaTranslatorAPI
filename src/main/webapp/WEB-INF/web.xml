<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/X-Bundled-schema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">

    <display-name>Darija Translator Security</display-name>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>TranslatorAPI</web-resource-name>
            <url-pattern>/translate</url-pattern> </web-resource-collection>
        <auth-constraint>
            <role-name>translator-user</role-name> </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>ApplicationRealm</realm-name>
    </login-config>

    <security-role>
        <role-name>translator-user</role-name>
    </security-role>
</web-app>